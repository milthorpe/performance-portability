#!/bin/bash
#PBS -P px94
#PBS -q normal
#PBS -l ncpus=48
#PBS -l mem=192GB
#PBS -l walltime=00:20:00
#PBS -l wd
#PBS -joe

set -eu

cd "$RUN_DIR" || exit 2
date
echo "$PWD"
ldd "$BENCHMARK_EXE"

cp $SRC_DIR/Benchmarks/tea_bm_5.in tea.in
cp $SRC_DIR/tea.problems tea.problems

case "$MODEL" in
chapel)
    export CHPL_RT_NUM_THREADS_PER_LOCALE=48
    "$BENCHMARK_EXE" "${opts[@]:-}"
    ;;
omp | std-* | cuda | kokkos)
    export OMP_NUM_THREADS=48
    export OMP_PROC_BIND=true
    export OMP_PLACES=cores
    "$BENCHMARK_EXE" "${opts[@]:-}"
    ;;
*)
    echo "Unknown run configuration for model '$MODEL'"
    exit 1
    ;;
esac
